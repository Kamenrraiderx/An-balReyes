---
import MainHead from '@components/MainHead.astro';
import Asidebar from '../components/Asidebar.astro';
import Background from '@components/Background.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import Reference from '../components/Reference.astro';

interface Props {
  isMainSection:boolean
}
const {isMainSection} = Astro.props;
---

<html lang="en">
  <head>
    <MainHead />
  </head>
  <body>
    <div>
      <slot name="header" />
      {isMainSection && <Background />}
      <div class="container">
        <Navbar />
        
        {isMainSection && <Reference />}
        <div>
          <slot class="slider"/>
        </div>
        <Asidebar />
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  .slider{
    display: flex;
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
  }
  .container {
    width: 100vw;
    
    background: #111;
    opacity: 0;
    position: relative;
    animation: changeColor 1s forwards;
    animation-delay: 3.3s;
    color: white;
    height: 100vh;
    box-sizing: border-box;
   
  }

  @keyframes changeColor {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
