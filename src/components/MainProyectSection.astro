---
import ProyectCard from './ProyectCard.astro';
import SectionContainer from '../layouts/SectionContainer.astro';
---

<SectionContainer>
  <div class="container">
    <div>
      <h1>Proyectos</h1>
      <div>
        <section class="proyectSection">
          <ProyectCard />
          <ProyectCard />
          <ProyectCard />
        </section>
        <div class="buttonArea">
          <a href="/projects"> Ver m√°s </a>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>
<style>
  h1 {
    margin-bottom: 80px;
  }
  .container {
    display: flex;
    align-items: center;
    scroll-snap-align: center;
  }
  .proyectSection {
    display: flex;
    gap: 60px;
  }
  .buttonArea {
    display: flex;
    justify-content: end;
    margin-top: 80px;
  }
  a {
    text-decoration: none;
    border: none;
    background: #4ade80;
    padding: 10px;
    width: 300px;
    display: flex;
    justify-content: center;
    color: white;
    font-weight: bolder;
    cursor: pointer;
  }
</style>
