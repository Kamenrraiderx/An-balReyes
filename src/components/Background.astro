<div class="container">
    {Array.from({ length: 6 }).map((_, index) => (
        <div class="grid-child" style={`animation-delay: ${1.2 - index * 0.2}s`}></div>
    ))}
</div>

<style>
    .container {
        width: 100vw;
        height: 100vh;
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-auto-flow: column;
        position: fixed;
        z-index: -1;
        background: #555 ;
    }

    .grid-child {
        height: 0;
        background: #111;
        animation: expand 2s forwards;
    }

    @keyframes expand {
        0% {
            height: 0;
        }
        100% {
            height: 100vh;
        }
    }
</style>
